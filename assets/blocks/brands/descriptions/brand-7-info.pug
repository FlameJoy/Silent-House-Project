section.brand-info
  .container 
    .brand-info-container 
      .brand-info-header
        h2.brand-info-header__title СтопЗвук БП Прайм
        h3.brand-info-header__subtitle
      .brand-info-content
        .brand-info-img-container
          img.brand-info__img(src="assets/images/dest/MATERIALS/brand-img-7.png" alt="brand-img-7")
        .brand-info-description-container
          .brand-info-description__text Бренд: СтопЗвук 
