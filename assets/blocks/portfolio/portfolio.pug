section.portfolio
  .container 
    .portfolio-container 
      // --------------
      // Header
      // --------------
      .portfolio-header
        h2.portfolio-header__title Наши выполненные работы
        h3.portfolio-header__subtitle 
      .portfolio-content
        // --------------
        // Slider tabs
        // --------------
        .portfolio-slider-tabs 
          button#defaultOpen.portfolio-slider-tablink(onclick='openTabcontent(event, "draft")') Черновой
          button.portfolio-slider-tablink(onclick='openTabcontent(event, "finishing")') Чистовой
          button.portfolio-slider-tablink(onclick='openTabcontent(event, "onkey")') Ремонт под ключ
          button.portfolio-slider-tablink(onclick='openTabcontent(event, "cosmetic")') Косметический
          button.portfolio-slider-tablink(onclick='openTabcontent(event, "capital")') Капитальный
          button.portfolio-slider-tablink(onclick='openTabcontent(event, "designer")') Дизайнерский
        // -----------------
        // Portfolio sliders
        // -----------------
        #draft.portfolio-slider-tabcontent 
          .portfolio-slider-container
            .portfolioSlides1.animate__fadeIn.animate__animated
              img.portfolio-slider-img(src="assets/images/dest/slide-1.jpg" alt="draft-1")
            .portfolioSlides1.animate__fadeIn.animate__animated
              img.portfolio-slider-img(src="assets/images/dest/slide-1.jpg" alt="draft-2")
            .portfolioSlides1.animate__fadeIn.animate__animated
              img.portfolio-slider-img(src="assets/images/dest/slide-1.jpg" alt="draft-3")
            .portfolioSlides1.animate__fadeIn.animate__animated
              img.portfolio-slider-img(src="assets/images/dest/slide-1.jpg" alt="draft-4")
            .portfolioSlides1.animate__fadeIn.animate__animated
              img.portfolio-slider-img(src="assets/images/dest/slide-1.jpg" alt="draft-5")
            // --------------
            // Next / Prev btn
            // --------------
            a.portfolio-next-btn(onclick="portfolioPlusSlides(1, 0)") &#10095;
            a.portfolio-prev-btn(onclick="portfolioPlusSlides(-1, 0)") &#10094;
          // --------------
          // Slider dots
          // --------------
          .slider-dots 
            span.portfolio-slider-dot1(onclick="portfolioCurrentSlide(1, 0)")
            span.portfolio-slider-dot1(onclick="portfolioCurrentSlide(2, 0)")
