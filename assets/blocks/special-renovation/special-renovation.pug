              img.slide__img(src="assets/images/dest/COTTAGE/main_001.jpg" alt="main_001")
            .slide3.animate__fadeIn.animate__animated
              img.slide__img(src="assets/images/dest/COTTAGE/main_002.jpg" alt="main_002")
            .slide3.animate__fadeIn.animate__animated
              img.slide__img(src="assets/images/dest/COTTAGE/main_003.jpg" alt="main_003")
            .slide3.animate__fadeIn.animate__animated
              img.slide__img(src="assets/images/dest/COTTAGE/main_004.jpg" alt="main_004")
            .slide3.animate__fadeIn.animate__animated
              img.slide__img(src="assets/images/dest/COTTAGE/main_005.jpg" alt="main_005")
